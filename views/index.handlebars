<div class="container">

  <a class="logo center">Burger Time!</a>
</div>

<br>

<div class="container center-align"
<img class="circle responsive-img" src="assets/" width="250px" height="250px" alt="Burger station">
</img>

<br>
<div class="container center-align">
  <div class="row">
    <div class="col s12 m6">
    <div class="card-panel">
<span class="submit">Burgers that are available!</h2></span>
{{#each burgers}}
  {{#unless devoured}}
  {{> burger/burger-block devoured=0}}
  {{/unless}}
  {{/each}}
</div>
  </div>
  </div>
<ul>
  {{#each burgers}}
  {{#unless devoured}}

  {{> burger/burger-block devoured=0}}
  </div>
  {{/unless}}
  {{/each}}
</ul>
   <div class="col s12 m6">
    <div class="card-panel">
<span class="white-text">Burgers devoured!</h2></span>
<h2>Burgers that are devoured!</h2>
{{#each burgers}}
  {{#if devoured}}
  {{> burger/burger-block devoured=1}}
  {{/if}}
  {{/each}}
    </div>
   </div>
   </div>
<div class="row">
<h2>Add a Burger</h2>
<form id="create-form col s12 l6 offset-13">

<div class="row">
  <div class="input-field col s12">
    <label for="newBurger">Enter burger name here:</label>
    <input type="text" id="newBurger" required minlength="1">
  </div>
</div>
<p>
  <label>
    <input class="with-gap" name="devoured" type="radio" value="0" checked />
    <span class="black-text">Make!</span>
  </label>
  <label>
    <input class="with-gap" name="devoured" type="radio" value="1" />
    <span class="black-text">Devour!</span>
  </label>

</p>

  <button class="btn-large waves-effect waves-light" type="submit" id="newBurgerBtn" name="new-burger">Submit
  <i class="fas fa-hanburger"></i>
  </button>
</form>
</div>
</div>